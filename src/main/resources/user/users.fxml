<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.user.AfficherUser">
    <children>
        <Label layoutX="20" layoutY="10" text="Users List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="userTable" layoutX="20" layoutY="50" prefWidth="750" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="70"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="100"/>
                <TableColumn fx:id="rolesColumn" text="Roles" prefWidth="100"/>
                <TableColumn fx:id="numTelColumn" text="Phone" prefWidth="100"/>
                <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="100"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
