        <Label layoutX="100.0" layoutY="250.0" text="Phone:" />
        <TextField fx:id="numTelField" layoutX="200.0" layoutY="245.0" prefWidth="250.0" />

        <Label layoutX="100.0" layoutY="290.0" text="Image URL:" />
