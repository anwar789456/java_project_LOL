<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.quiz.AfficherQuiz">
    <children>
        <VBox layoutX="14.0" layoutY="15.0" prefWidth="800" spacing="10">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des quiz" />

            <TableView fx:id="quizTableView" prefHeight="400.0" prefWidth="800.0">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="titreColumn" prefWidth="150.0" text="Titre" />
                    <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                    <TableColumn fx:id="dateCreationColumn" prefWidth="100.0" text="Date création" />
                    <TableColumn fx:id="dateDebutColumn" prefWidth="100.0" text="Date début" />
                    <TableColumn fx:id="dateFinColumn" prefWidth="100.0" text="Date fin" />
                    <TableColumn fx:id="statutColumn" prefWidth="100.0" text="Statut" />
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button fx:id="refreshButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Actualiser" />
                <Button fx:id="addButton" style="-fx-background-color: #0078D7; -fx-text-fill: white;" text="Ajouter" />
                <Button fx:id="modifyButton" style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Modifier" />
                <Button fx:id="deleteButton" style="-fx-background-color: #FF0000; -fx-text-fill: white;" text="Supprimer" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
